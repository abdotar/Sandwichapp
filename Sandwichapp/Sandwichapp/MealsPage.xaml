<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sandwichapp.MealsPage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout>
                <Label Text="Имя" />
                <Entry Text="{Binding Path=Model.Name}" FontSize="Medium" />
                <Label Text="Описание" />
                <Entry Text="{Binding Path=Model.Discription}" FontSize="Medium" />
                <Label Text="Путь к картинке" />
                <Entry Text="{Binding Path=Model.ImagePath}" FontSize="Medium" />
                <Label Text="Цена" />
                <Entry Text="{Binding Path=Model.Price}" FontSize="Medium" />
                <Label Text="Тип блюда" />
                <Entry Text="{Binding Path=Model.MealTypeId}" FontSize="Medium" />
            </StackLayout>
            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
                <Button Text="Сохранить" Command="{Binding ViewModel.SaveMealCommand}" CommandParameter="{Binding Model}" />
                <Button Text="Удалить" Command="{Binding ViewModel.DeleteMealCommand}" CommandParameter="{Binding Model}" />
                <Button Text="Назад" Command="{Binding Path=ViewModel.BackCommand}" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>